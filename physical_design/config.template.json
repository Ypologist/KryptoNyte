{
  "_metadata": {
    "description": "KryptoNyte OpenLane2 Configuration Template",
    "version": "1.0.0",
    "template_engine": "envsubst",
    "required_variables": [
      "MODULE_NAME",
      "RTL_DIR",
      "PHYSICAL_DESIGN_DIR"
    ],
    "optional_variables": [
      "CLOCK_PORT",
      "CLOCK_PERIOD",
      "CORE_UTILIZATION",
      "ASPECT_RATIO",
      "PDK_VARIANT",
      "SYNTHESIS_STRATEGY",
      "GENERATE_GDS",
      "RUN_DRC"
    ]
  },
  
  "DESIGN_NAME": "${MODULE_NAME}",
  "DESIGN_FAMILY": "KryptoNyte",
  
  "VERILOG_FILES": [
    "${RTL_DIR}/generators/generated/verilog_hierarchical_timed/${MODULE_NAME}.v"
  ],
  
  "INCLUDE_PATHS": [
    "${RTL_DIR}/generators/generated/verilog_hierarchical_timed",
    "${RTL_DIR}/generators/generated/verilog_hierarchical"
  ],
  
  "CONSTRAINT_FILES": {
    "PNR_SDC_FILE": "${PHYSICAL_DESIGN_DIR}/constraints/design.sdc",
    "SIGNOFF_SDC_FILE": "${PHYSICAL_DESIGN_DIR}/constraints/signoff.sdc"
  },
  
  "CLOCK_CONFIG": {
    "CLOCK_PORT": "${CLOCK_PORT:-clock}",
    "CLOCK_PERIOD": "${CLOCK_PERIOD:-10.0}"
  },
  
  "FLOORPLAN_CONFIG": {
    "FP_CORE_UTIL": "${CORE_UTILIZATION:-0.7}",
    "FP_ASPECT_RATIO": "${ASPECT_RATIO:-1.0}",
    "FP_PDN_VPITCH": 7.0,
    "FP_PDN_HPITCH": 7.0,
    "FP_PDN_VOFFSET": 7.0,
    "FP_PDN_HOFFSET": 7.0
  },
  
  "SYNTHESIS_CONFIG": {
    "SYNTH_STRATEGY": "${SYNTHESIS_STRATEGY:-AREA 0}",
    "SYNTH_READ_BLACKBOX_LIB": true,
    "SYNTH_BUFFERING": true,
    "SYNTH_SIZING": true
  },
  
  "PLACEMENT_CONFIG": {
    "PL_TARGET_DENSITY": 0.6,
    "PL_BASIC_PLACEMENT": true,
    "PL_SKIP_INITIAL_PLACEMENT": false
  },
  
  "ROUTING_CONFIG": {
    "RT_MAX_LAYER": 6,
    "ROUTING_STRATEGY": "${ROUTING_STRATEGY:-0}",
    "GLB_RT_ADJUSTMENT": 0.1
  },
  
  "PDK_CONFIG": {
    "PDK": "sky130A",
    "STD_CELL_LIBRARY": "${PDK_VARIANT:-sky130_fd_sc_hd}",
    "EXTRA_LEFS": [],
    "EXTRA_GDS_FILES": [],
    "EXTRA_LIBS": []
  },
  
  "FLOW_CONTROL": {
    "RUN_KLAYOUT_STREAMOUT": "${GENERATE_GDS:-true}",
    "RUN_KLAYOUT_DRC": "${RUN_DRC:-true}",
    "RUN_KLAYOUT_XOR": false,
    "RUN_MAGIC_STREAMOUT": true,
    "ERROR_ON_MAGIC_DRC": false,
    "ERROR_ON_LVS_ERROR": false,
    "RUN_SPEF_EXTRACTION": true
  },
  
  "VERIFICATION_CONFIG": {
    "RUN_CVC": true,
    "RUN_STA": true,
    "RUN_ANTENNA_CHECK": true,
    "QUIT_ON_TIMING_VIOLATIONS": false,
    "QUIT_ON_HOLD_VIOLATIONS": false
  },
  
  "OUTPUT_CONFIG": {
    "GENERATE_FINAL_SUMMARY_REPORT": true,
    "SAVE_FINAL_VIEWS": true,
    "COMPRESS_RESULTS": false
  }
}
